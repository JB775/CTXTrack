<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jb.jb.ctxtrack.FirstStop">

    <TextView
        android:text="@string/stop_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:id="@+id/stop1"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ctx2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_upon_arrival_first"
        android:id="@+id/arrivedSecondStop"
        android:gravity="center"
        android:textSize="17dp"
        android:layout_below="@+id/stop1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_first_departure"
        android:id="@+id/departedSecondStop"
        android:layout_toRightOf="@+id/checkBox2"
        android:gravity="center"
        android:textSize="17dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/arrivedSecondStop"
        android:layout_alignStart="@+id/arrivedSecondStop"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_toStartOf="@+id/arrivedSecondStop"
        android:layout_toLeftOf="@+id/arrivedSecondStop"
        android:layout_alignBaseline="@+id/arrivedSecondStop"
        android:layout_alignBottom="@+id/arrivedSecondStop"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_alignBottom="@+id/departedSecondStop"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/if_you_dropped_trailer"
        android:id="@+id/dropTrailerTextView"
        android:textSize="18dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_above="@+id/enterTrailerEditText"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterTrailerEditText"
        android:gravity="center_horizontal"
        android:hint="@string/insert_new_trailer_number"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
