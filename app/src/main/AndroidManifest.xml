<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jb.jb.ctxtrack" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FirstStop"
            android:configChanges="orientation"
            android:label="@string/title_activity_first_stop"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jb.jb.ctxtrack.MainActivity" />
        </activity>
        <activity
            android:name=".SecondStop"
            android:configChanges="orientation"
            android:label="@string/title_activity_second_stop"
            android:parentActivityName=".FirstStop"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jb.jb.ctxtrack.FirstStop" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BackInDelran"
            android:configChanges="orientation"
            android:label="@string/title_activity_back_in_delran"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Login"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:configChanges="orientation"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ThirdStop"
            android:label="@string/title_activity_third_stop"
            android:parentActivityName=".SecondStop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jb.jb.ctxtrack.SecondStop" />
        </activity>
        <activity
            android:name=".FourthStop"
            android:label="@string/title_activity_fourth_stop"
            android:parentActivityName=".ThirdStop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jb.jb.ctxtrack.ThirdStop" />
        </activity>
        <activity
            android:name=".FifthStop"
            android:label="@string/title_activity_fifth_stop"
            android:parentActivityName=".FourthStop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jb.jb.ctxtrack.FourthStop" />
        </activity>
        <activity
            android:name=".SixthStop"
            android:label="@string/title_activity_sixth_stop"
            android:parentActivityName=".FifthStop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jb.jb.ctxtrack.FifthStop" />
        </activity>

    </application>

</manifest>
